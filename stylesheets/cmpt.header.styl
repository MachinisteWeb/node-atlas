@import "variables"

.header
	z-index 2
	height 200px
	position relative
	&--information
		-webkit-transition opacity 2s ease 
		   -moz-transition opacity 2s ease 
		    -ms-transition opacity 2s ease 
		     -o-transition opacity 2s ease 
		        transition opacity 2s ease
		&--package
		&--follow
			display none
			@media (min-width 560px)
				display block
		position absolute
		top 20px
		right 20px
		z-index 2
		width calc(100% - 40px)
		text-align right
		opacity 0
		&--github
			float left
		&.is-loaded
			opacity 1
	&--background
		background -webkit-linear-gradient(top,  rgba(255,255,255, .8) 0%,rgba(255,255,255, .2) 87%,rgba(255,255,255, 0) 100%)
		background    -moz-linear-gradient(top,  rgba(255,255,255, .8) 0%, rgba(255,255,255, .2) 87%, rgba(255,255,255, 0) 100%)
		background         linear-gradient(to bottom,  rgba(255,255,255, .8) 0%,rgba(255,255,255, .2) 13%,rgba(255,255,255, 0) 100%)
		-webkit-transition height 2s ease 
		   -moz-transition height 2s ease 
		    -ms-transition height 2s ease 
		     -o-transition height 2s ease 
		        transition height 1s ease
		position absolute
		top 0
		left 0
		width 100%
		height 0
	h1
		-webkit-transition top 1s ease
		   -moz-transition top 1s ease
		    -ms-transition top 1s ease
		     -o-transition top 1s ease
		        transition top 1s ease
		cursor pointer
		z-index 2
		width 50%
		max-width: 500px
		min-width 300px
		margin 0
		position absolute
		top 40%
		@media (min-width 580px)
			top 50%
		left 50%
		-webkit-transform translate(-50%, -50%)
		   -moz-transform translate(-50%, -50%)
		    -ms-transform translate(-50%, -50%)
		     -o-transform translate(-50%, -50%)
		        transform translate(-50%, -50%)
	h2
		color #3E863D
		font-size 1.6rem
		span
			-webkit-transition opacity 1s ease
			   -moz-transition opacity 1s ease
			    -ms-transition opacity 1s ease
			     -o-transition opacity 1s ease
			        transition opacity 1s ease
			opacity 0
		strong
			-webkit-transition font-size 1s ease
			   -moz-transition font-size 1s ease
			    -ms-transition font-size 1s ease
			     -o-transition font-size 1s ease
			        transition font-size 1s ease
			display block
			font-size 2.8rem
	&.is-scrolled
		& ^[0]--background
			height 100%
		& ^[0]--abstract
			opacity 0
		& ^[0]--main
			&--first
			&--second
			&--third
				opacity 0
	&.with-animation
		-webkit-transition height 1s ease
		   -moz-transition height 1s ease
		    -ms-transition height 1s ease
		     -o-transition height 1s ease
		        transition height 1s ease
	&--abstract
		-webkit-transition top 3s ease, opacity 1s ease
		   -moz-transition top 3s ease, opacity 1s ease
		    -ms-transition top 3s ease, opacity 1s ease
		     -o-transition top 3s ease, opacity 1s ease
		        transition top 3s ease, opacity 1s ease
		        text-align center
		font-size 2rem
		position absolute
		opacity 0
		top 50%
		left 50%
		min-width 300px
		-webkit-transform translate(-50%, -50%)
		   -moz-transform translate(-50%, -50%)
		    -ms-transform translate(-50%, -50%)
		     -o-transform translate(-50%, -50%)
		        transform translate(-50%, -50%)
		@media (max-height 479px)
			display none
		&.is-loaded
			top 20%
			opacity 1
	&--main
	&--abstract
		text-shadow 1px 1px 2px rgba(255, 255, 255, 0.6), -1px 1px 2px rgba(255, 255, 255, 0.6), 1px -1px 2px rgba(255, 255, 255, 0.6), -1px -1px 2px rgba(255, 255, 255, 0.6)
	&--main
		cursor default
		font-family "Open Sans"
		ul
			margin 0
			padding 0
		li
			list-style-type none
		&--first
		&--second
		&--third
			max-width 352px
			bottom 10%
			h2
				span
					opacity 0
			p
				display none
				strong
					font-size 1.8rem

			@media (min-width 540px)
				h2
					span
						opacity 1

			@media (min-width 920px)
				bottom -5%
				p
					display block
				h2
					span
						opacity 0
			&:hover
				h2
					strong

						font-size 3.6rem
					span
						opacity 1
			opacity 0
			text-align center
			position absolute
			-webkit-transition left 2s ease, right 2s ease, bottom 2s ease, opacity 2s ease
			   -moz-transition left 2s ease, right 2s ease, bottom 2s ease, opacity 2s ease
			    -ms-transition left 2s ease, right 2s ease, bottom 2s ease, opacity 2s ease
			     -o-transition left 2s ease, right 2s ease, bottom 2s ease, opacity 2s ease
			        transition left 2s ease, right 2s ease, bottom 2s ease, opacity 2s ease
			&.is-loaded
				opacity 1
			@media (max-height 619px)
				p
					display none
		&--first
			left 0%
			width 50%
			@media (min-width 540px)
				width 26%
			@media (max-width 539px)
				bottom 25%
			&.is-loaded
				left 25%
				@media (min-width 540px)
					left 7%
		&--second
			bottom 20%
			left 50%
			-webkit-transform translateX(-50%)
			   -moz-transform translateX(-50%)
			    -ms-transform translateX(-50%)
			     -o-transform translateX(-50%)
			        transform translateX(-50%)
			width 50%
			@media (min-width 540px)
				width 26%
			&.is-loaded
				bottom -5%
		&--third
			right 0
			width 50%
			@media (min-width 540px)
				width 26%
			&.is-loaded
				right 25%
				@media (min-width 540px)
					right 7%
	&--title
		&--node
			-webkit-transition top 2s ease, opacity 2s ease
			   -moz-transition top 2s ease, opacity 2s ease
			    -ms-transition top 2s ease, opacity 2s ease
			     -o-transition top 2s ease, opacity 2s ease
			        transition top 2s ease, opacity 2s ease
			&.is-loaded
				top 26%
				opacity 1

			opacity 0
			z-index 3
			width 83%
			position absolute
			top -106%
			left 39%
			-webkit-transform translate(-50%, -50%)
			   -moz-transform translate(-50%, -50%)
			    -ms-transform translate(-50%, -50%)
			     -o-transform translate(-50%, -50%)
			        transform translate(-50%, -50%)
		&--atlas
			position relative;
			z-index 2
			-webkit-transition opacity 3s ease
			   -moz-transition opacity 3s ease
			    -ms-transition opacity 3s ease
			     -o-transition opacity 3s ease
			        transition opacity 3s ease
			&.is-loaded
				opacity 1
			opacity 0
			width 100%
		&--trans
			z-index 1
			width 100%
			position absolute
			top 0
			left 0
			opacity 0
			-webkit-transition opacity 2s ease
			   -moz-transition opacity 2s ease
			    -ms-transition opacity 2s ease
			     -o-transition opacity 2s ease
			        transition opacity 2s ease
			&.is-loaded
				opacity 1