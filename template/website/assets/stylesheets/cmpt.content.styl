@import "variables"

.content
	li
	p
		code
			color #e96900
			padding 3px 5px
			margin 0 2px
			border-radius 2px
			white-space nowrap
			background-color  #f8f8f8;
			font-family monospace
			font-size 0.8em
	box-shadow -2px 0 5px rgba(0, 0, 0, 1)
	font-size 1.5rem
	line-height: 2rem;
	opacity 0 
	-webkit-transition opacity 1s ease
	   -moz-transition opacity 1s ease 
	    -ms-transition opacity 1s ease 
	     -o-transition opacity 1s ease 
	        transition opacity 1s ease 
	&.with-animation
		opacity 1 
		-webkit-transition height 1s ease
		   -moz-transition height 1s ease 
		    -ms-transition height 1s ease 
		     -o-transition height 1s ease 
		        transition height 1s ease 
	padding 0.1rem
	overflow hidden
	background-color rgba(255, 255, 255, 1)
	padding 8px 
	-webkit-box-sizing border-box
	   -moz-box-sizing border-box
	        box-sizing border-box
	@media (min-width 768px)
		padding 16px
	-webkit-box-sizing border-box
	   -moz-box-sizing border-box
	        box-sizing border-box
	&--inner
		-webkit-transition height 1s ease, opacity 1s ease
		   -moz-transition height 1s ease, opacity 1s ease
		    -ms-transition height 1s ease, opacity 1s ease
		     -o-transition height 1s ease, opacity 1s ease
		        transition height 1s ease, opacity 1s ease
		overflow-y auto
		-webkit-box-sizing border-box
		   -moz-box-sizing border-box
		        box-sizing border-box
		position relative
		height 100%
		width 100%
		@media (min-width 768px)
			margin-left 310px 
			width calc(100% - 310px)
		padding 0 20px
		opacity 1
		&.is-blocked
			overflow hidden; 
		&.is-hidden
			opacity 0 
			height 0
	h2
		-webkit-transition font-size 1s ease
		   -moz-transition font-size 1s ease
		    -ms-transition font-size 1s ease
		     -o-transition font-size 1s ease
		        transition font-size 1s ease	
		color #3E863D
		margin 20px 0 1em
		line-height: 3rem;
		font-size 2.4rem
		@media (min-width 768px)
			font-size 3rem
	h3
		&:nth-child(1)
			margin-top 20px 
		font-size 1.8rem
		line-height: 2rem;
		@media (min-width 768px)
			font-size 2.25rem
		margin 1.3em 0 0.8em
		padding 0.7em 0
		border-bottom 1px solid #ddd
	h2
	h3
		position relative
		cursor pointer
		&:hover::before
			content "\f13d"
			font-family "FontAwesome"
			z-index 1
			overflow hidden
			display inline-block
			margin 0
			text-align center
			top 50%
			right calc(100% + 2px)
			width 18px 
			position absolute
			-webkit-transform translateY(-50%)
			   -moz-transform translateY(-50%)
			    -ms-transform translateY(-50%)
			     -o-transform translateY(-50%)
			        transform translateY(-50%) 
			font-size 0.5em
		    text-rendering auto
		    -webkit-font-smoothing antialiased